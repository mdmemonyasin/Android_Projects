<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#ffffff">

    <ImageView android:layout_width="250dp" android:layout_height="250dp"
               android:background="@drawable/joey"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="100dp"
               android:id="@+id/joey"
    />

    <TextView android:layout_width="310dp" android:layout_height="wrap_content"
              android:layout_below="@+id/joey"
              android:layout_centerHorizontal="true"
              android:lines="3"
              android:id="@+id/joey_description"
              android:text="The app is made by Joey Tribbiani as part of Internshala's Online Android Training Project"
              android:textAlignment="center"
              android:textSize="18sp"
    />

    <TextView android:layout_width="300dp" android:layout_height="wrap_content"
              android:layout_below="@+id/joey_description"
              android:layout_centerHorizontal="true"
              android:text="App Version:1.0"
              android:textAlignment="center"
              android:id="@+id/appVersion"
              android:textSize="18sp"
    />

</RelativeLayout>

